{
  "info": {
    "name": "Murals API",
    "description": "Mural management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get mural by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/murals/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "murals", "1"]
        },
        "description": "Retrieve a mural's information by its ID"
      }
    },
    {
      "name": "Get murals",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/murals?type=owned",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "murals"],
          "query": [
            {
              "key": "type",
              "value": "owned"
            }
          ]
        },
        "description": "Retrieve murals of a specific type"
      }
    },
    {
      "name": "Get mural thumbnail",
