{
  "info": {
    "name": "Users API",
    "description": "User management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get user by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "1"]
        },
        "description": "Retrieve a user's information by their ID"
      }
    },
    {
      "name": "Get current user",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/users/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "me"]
        },
        "description": "Retrieve the authenticated user's information"
      }
    },
    {
      "name": "Check username availability",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/users/IsUsernameTaken?username=testuser",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "IsUsernameTaken"],
          "query": [
            {
              "key": "username",
              "value": "testuser"
            }
          ]
        },
        "description": "Check if a username is already taken"
      }
    },
    {
      "name": "Verify password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "\"password123\""
        },
        "url": {
          "raw": "http://localhost:8080/api/users/verify-password",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "verify-password"]
        },
        "description": "Verify if the provided password matches the authenticated user's password"
      }
    },
    {
      "name": "Change password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "\"newPassword123\""
        },
        "url": {
          "raw": "http://localhost:8080/api/users/password",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "password"]
        },
        "description": "Change the authenticated user's password"
      }
    },
    {
      "name": "Create new user",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"password123\",\n  \"email\": \"user@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users"]
        },
        "description": "Create a new user account"
      }
    },
    {
      "name": "Update user",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"updateduser\",\n  \"email\": \"newemail@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "1"]
        },
        "description": "Partially update a user's information"
      }
    },
    {
      "name": "Delete current user",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users"]
        },
        "description": "Delete the authenticated user's account"
      }
    }
  ]
}
